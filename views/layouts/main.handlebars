<!DOCTYPE HTML>
<html>

<head>
	<title>Battleship | Prometheus '19</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="assets/css/main.css" />
	<noscript>
		<link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
</head>

<body class="is-preload">
	<!-- Page Wrapper -->
	<div id="page-wrapper">


		<!-- Banner -->
		<section id="banner">
			<div class="inner">
				<div class="logo"><span><img src="images/logo.png" alt=""></span></div>
				<h1>Battleship</h1>
				<h3>Prometheus '19</h3>
			</div>
		</section>

		<!-- Wrapper -->
		<section id="wrapper">
			<!--<section>-->
			<div class="wrapper">
				<div class="inner">
					<form method="post" action="login">
						<div align="center">
							<div class="col-6 col-12-xsmall">
								<label for="username">Username</label>
								<input type="text" name="username" id="demo-name" style="width:300px" required />
							</div><br>
							<div class="col-6 col-12-xsmall">
								<label for="pass">Password</label>
								<input type="password" name="pass" id="demo-email" style="width:300px" required />
							</div><br><br>
							<div class="col-12">
								<input type="submit" value="Login" class="primary" />
							</div>
							{{#if loginMessage}}
							<p>{{ loginMessage }}</p>
							{{/if}}
						</div>
					
				</div>
			</div>
			<!--</section>-->
		</section>
		<footer id="footer">
			<div class="inner">
				<p class="copyright">IECSE Manipal</p>
			</div>
		</footer>
	</div>

	<!-- Scripts -->
	<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/jquery.scrollex.min.js"></script>
	<script src="assets/js/browser.min.js"></script>
	<script src="assets/js/breakpoints.min.js"></script>
	<script src="assets/js/util.js"></script>
	<script src="assets/js/main.js"></script>

</body>

</html>